
{% set route_appelante = route_appelante|default('cahiercharge_new') %}
{% if route_appelante=='cahiercharge_new' %}  
    <form action="{{ path(route_appelante, {'id': cahierCharge.id} ) }}" method="post" {{form_enctype(form) }}>
    {% else %}      
        <form action="" method="post" {{form_enctype(form) }}>
        {% endif %}
        <p>
            {# On affiche tous les messages flash dont le nom est « info » #}
            {% for message in app.session.flashbag.get('info') %}
            <p>{{ message }}</p>
        {% endfor %}

        <div class="row">
            {{ form_errors(form) }}
            <div class="col-lg-6 col-md-6 col-xs-12">
                {{ form_errors(form.titre) }}
                <div class="form-group">
                    <label class="control-label col-lg-4 col-md-6 col-xs-6" for="numero"> {{ 'Titre'|trans }}:</label>
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        {% set titre = 'Entrer Titre'|trans %}
                        {{ form_widget(form.titre, { 'attr': {'class': 'form-control','placeholder': titre} }) }}
                    </div>
                </div>  
               <br><br>
                {{ form_errors(form.brochure) }}
                {% if (route_appelante=='cahiercharge_edit') %}
                    <div class="form-group">
                        <label class="control-label col-lg-4 col-md-6 col-xs-6" for="Brochure"> {{ 'Fichier PDF'|trans }}: </label>
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            <a href="{{ asset('' ~ cahierCharge.brochure) }}">Télécharger (PDF)</a>
                        </div>
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            {{ form_widget(form.brochure) }}
                        </div>
                    </div>
                {% else %}
                    <div class="form-group">
                        <label class="control-label col-lg-4 col-md-6 col-xs-6" for="Brochure"> {{ 'Fichier PDF'|trans }}: </label>
                        <div class="col-lg-6 col-md-6 col-xs-12">
                           {{ form_widget(form.brochure) }}
                        </div>
                    </div>
                {% endif %}
                <br><br>
            </div>
        </div>
        {{ form_rest(form) }}
        {% if (route_appelante=='cahiercharge_new') or  (route_appelante=='cahiercharge_edit') %}
            <div class="row" style="  margin-top: 40px;">
                 <div class="modal-footer">
                    <input type="submit" class="btn btn-primary"  value="{{ 'Valider'|trans }}" />
                    <input  type="reset" class="btn btn-default" value="{{ 'Réinitialiser'|trans }}" />
                </div>
            </div>
        {% elseif route_appelante=='cahiercharge_delete' %}
            <div class="row" style="  margin-top: 40px;">
                 <div class="modal-footer">
                    <input type="submit" value="{{ 'Supprimer'|trans }}" class="btn btn-danger" />
                </div>
            </div>
        {% endif %}

    </form>
