        <div class="x_panel">
            <div class="x_title">
                <h2>Afficher un Cahier de Charge</h2>
                <div class="btn-group pull-right">                       
                    <a class="btn btn-primary btn-xs" data-toggle="tooltip" 
                       data-placement="top" title="" href="{{ path('cahiercharge_index') }}" data-original-title="Liste">
                        <span class="glyphicon glyphicon-list"></span> Liste des Cahier de Charge</a>
                </div>
                <div class="clearfix"></div>
            </div>

        {% endblock %}

        {% block body -%}
