{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projetloi</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projetLoi.id }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ projetLoi.sujet }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if projetLoi.date %}{{ projetLoi.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('projetloi_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('projetloi_edit', { 'id': projetLoi.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
