
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
    <div class="row">
            <h1>{{'Login'|trans}}</h1>
<form action="{{ path("fos_user_security_check") }}" method="post">
    
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
 <div class="col-md-12">
    <label for="username"> {{'security.login.username'|trans({}, 'FOSUserBundle')}}</label>
</div>
<div class="col-md-12">
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username"  class="form-control"/>
</div>   
<div class="col-md-12">
        <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
</div>
<div class="col-md-12">  
    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" />
</div>
<div class="col-md-12">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
</div>
<div class="col-md-12">
        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle')}}</label>
</div>    
<div class="col-md-12">
        <input type="submit"  class="button btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="form-control" />
</div>    


</form>
 </div>
</div>
