{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articletranslation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ articleTranslation.id }}</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ articleTranslation.locale }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ articleTranslation.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ articleTranslation.description }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ articleTranslation.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('articletranslation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('articletranslation_edit', { 'id': articleTranslation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
